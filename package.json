{
  "name": "edumeter-mvp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm -w apps/web run dev",
    "dev:api": "npm -w apps/api run dev",
    "dev:worker": "npm -w apps/worker run run",
    "build": "npm -w apps/web run build",
    "preview": "npm -w apps/web run preview",
    "migrate:api": "npm -w apps/api run migrate",
    "worker:ctt": "npm -w apps/worker run run -- --task ctt",
    "worker:irt": "npm -w apps/worker run run -- --task irt",
    "worker:exposure": "npm -w apps/worker run run -- --task exposure",
    "worker:detect": "npm -w apps/worker run run -- --task detect"
  }
}
